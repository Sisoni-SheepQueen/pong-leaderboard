@model IEnumerable<dynamic>
<h2>Leaderboard</h2>
<table border="1">
    <tr>
        <th>Username</th>
        <th>Score</th>
        @if (HttpContext.Session.GetString("Role") == "admin")
        {
            <th>Actions</th>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Username</td>
            <td>@item.Score</td>
            @if (HttpContext.Session.GetString("Role") == "admin")
            {
                <td>
                    <form method="post" asp-action="DeleteScore" asp-controller="Game">
                        <input type="hidden" name="username" value="@item.Username" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            }
        </tr>
    }
</table>

<a href="/Game/Index">Back to Game</a>
