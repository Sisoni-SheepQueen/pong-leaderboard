@{
    ViewBag.Title = "Neon Pong";
}

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet">

<h1 class="title">NEON PONG</h1>

<div class="game-wrapper">
    <canvas id="pong" width="800" height="400"></canvas>

    <!-- MENU OVERLAY -->
    <div id="menuOverlay" class="overlay">
        <h2>Select Difficulty</h2>
        <button class="btn neon" onclick="startGame('easy')">Easy</button>
        <button class="btn neon" onclick="startGame('medium')">Medium</button>
        <button class="btn neon" onclick="startGame('hard')">Hard</button>
    </div>

    <!-- GAME OVER OVERLAY -->
    <div id="gameOverOverlay" class="overlay" style="display:none;">
        <h2>Game Over</h2>
        <p>Score: <span id="finalScore"></span></p>
        <button class="btn neon" onclick="restartGame()">Restart</button>
    </div>
</div>

<div class="hud">
    <span>Score: <span id="score">0</span></span>

    <div style="display:flex; gap:10px;">
        <button class="btn outline" onclick="toggleTheme()">Toggle Theme</button>
        <a href="/Game/Leaderboard" class="btn outline">Leaderboard</a>
    </div>
</div>


<script src="~/js/pong.js"></script>

<style>
    body {
        margin: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #ff4ecd, #ffdd00);
        font-family: 'Orbitron', sans-serif;
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .title {
        margin: 20px 0;
        font-size: 3rem;
        letter-spacing: 4px;
        text-shadow: 0 0 20px rgba(255,255,255,0.6);
    }

    .game-wrapper {
        position: relative;
        width: 800px;
        height: 400px;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 0 30px rgba(255, 80, 200, 0.6);
        background: rgba(0,0,0,0.25);
        backdrop-filter: blur(10px);
    }

    canvas {
        display: block;
        background: rgba(0,0,0,0.35);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.6);
        backdrop-filter: blur(8px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 15px;
        z-index: 10;
    }

        .overlay h2 {
            margin-bottom: 10px;
            font-size: 2rem;
            text-shadow: 0 0 15px rgba(255, 200, 255, 0.8);
        }

    .btn {
        font-family: inherit;
        padding: 12px 28px;
        font-size: 1rem;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: white;
    }

        .btn.neon {
            border: none;
            background: linear-gradient(135deg, #ff4ecd, #ffdd00);
            box-shadow: 0 0 15px rgba(255, 200, 0, 0.7);
        }

            .btn.neon:hover {
                transform: scale(1.07);
                box-shadow: 0 0 25px rgba(255, 230, 100, 1);
            }

        .btn.outline {
            border: 2px solid white;
            background: transparent;
        }

            .btn.outline:hover {
                background: white;
                color: black;
            }

    .hud {
        margin-top: 15px;
        width: 800px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 1.2rem;
        text-shadow: 0 0 10px rgba(255,255,255,0.5);
    }

    /* ===== DULL THEME ===== */
    body.dull-theme {
        background: linear-gradient(135deg, #7a6a85, #8a8460);
    }

        body.dull-theme .title {
            text-shadow: 0 0 10px rgba(255,255,255,0.3);
        }

        body.dull-theme .game-wrapper {
            box-shadow: 0 0 20px rgba(120,120,120,0.5);
        }

        body.dull-theme .btn.neon {
            background: linear-gradient(135deg, #8b6f92, #9a916a);
            box-shadow: 0 0 10px rgba(150,150,150,0.5);
        }

        body.dull-theme .overlay h2 {
            text-shadow: 0 0 8px rgba(200,200,200,0.4);
        }

        body.dull-theme canvas {
            background: rgba(0,0,0,0.45);
        }

</style>
