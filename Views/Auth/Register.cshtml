@{
    ViewBag.Title = "Register";
}

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600&display=swap" rel="stylesheet">

<div class="auth-container">
    <div class="auth-card">
        <h2>Register</h2>

        <form method="post" asp-action="Register">
            <input type="text" name="username" placeholder="Username" required />
            <input type="password" name="password" placeholder="Password" required />
            <button type="submit">Register</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="error-message">@ViewBag.Message</p>
        }

        <a href="/Auth/Login" class="switch-link">Already have an account? Login</a>
    </div>
</div>

<style>
    body {
        margin: 0;
        min-height: 100vh;
        background: linear-gradient(135deg, #ff4ecd, #ffdd00);
        font-family: 'Orbitron', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth-container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth-card {
        width: 400px;
        padding: 40px;
        background: rgba(0, 0, 0, 0.35);
        backdrop-filter: blur(12px);
        border-radius: 25px;
        box-shadow: 0 0 45px rgba(255, 80, 200, 0.7);
        text-align: center;
        color: white;
    }

        .auth-card h2 {
            margin-bottom: 30px;
            font-size: 2rem;
            text-shadow: 0 0 20px rgba(255,255,255,0.7);
            letter-spacing: 2px;
        }

    form input {
        width: 80%;
        padding: 12px 15px;
        margin: 10px 0;
        border-radius: 25px;
        border: none;
        outline: none;
        font-size: 1rem;
        text-align: center;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        box-shadow: 0 0 10px rgba(255, 200, 200, 0.5);
        transition: all 0.3s ease;
    }

        form input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        form input:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 15px rgba(255, 255, 200, 0.8);
        }

    form button {
        width: 50%;
        padding: 12px;
        margin-top: 15px;
        border-radius: 25px;
        border: none;
        font-family: 'Orbitron', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        background: linear-gradient(135deg, #ff4ecd, #ffdd00);
        color: black;
        text-shadow: 0 0 8px rgba(255,255,255,0.8);
        box-shadow: 0 0 15px rgba(255, 221, 0, 0.7);
        transition: all 0.3s ease;
    }

        form button:hover {
            transform: scale(1.05);
            box-shadow: 0 0 25px rgba(255, 255, 100, 1);
        }

    .error-message {
        color: #ff3b3b;
        margin-top: 15px;
        font-weight: bold;
        text-shadow: 0 0 10px rgba(255, 50, 50, 0.7);
    }

    .switch-link {
        display: block;
        margin-top: 20px;
        color: #ffffff;
        text-decoration: none;
        font-weight: bold;
        text-shadow: 0 0 10px rgba(255,255,255,0.5);
        transition: all 0.25s ease;
    }

        .switch-link:hover {
            color: #ffdd00;
            text-shadow: 0 0 15px rgba(255, 221, 0, 0.9);
        }
</style>
